<Window x:Class="SGEntregasAlbertoSheila.SegundaTabletVentana"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SGEntregasAlbertoSheila"
        xmlns:components="clr-namespace:SGEntregasAlbertoSheila.Components"
        xmlns:converters="clr-namespace:SGEntregasAlbertoSheila.Converters"
        xmlns:vm="clr-namespace:SGEntregasAlbertoSheila.ViewModel"
        mc:Ignorable="d"
        Title="SegundaTabletVentana" Height="450" Width="800" x:Name="root">

    <Window.Resources>
        <converters:GreaterThanConverter x:Key="miconversor"/>
        <vm:CollectionViewModel x:Key="ColeccionVM"/>
    </Window.Resources>

    <StackPanel VerticalAlignment="Top" x:Name="SPcontenedorTarjetas">
        <StackPanel.Style>
            <Style TargetType="StackPanel">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding ActualWidth, ElementName=root,
                        Converter={StaticResource miconversor}, ConverterParameter=750}" Value="true">
                        <Setter Property="Orientation" Value="Horizontal"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </StackPanel.Style>
    </StackPanel>
    
</Window>
